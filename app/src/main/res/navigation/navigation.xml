<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.thiagoalexb.dev.clockin.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_addressFragment"
            app:destination="@id/addressFragment2"
            app:popUpTo="@+id/mainFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_mainFragment_to_editScheduleFragment"
            app:destination="@id/editScheduleFragment" />
    </fragment>
    <fragment
        android:id="@+id/addressFragment2"
        android:name="com.thiagoalexb.dev.clockin.ui.address.AddressFragment"
        android:label="fragment_address"
        tools:layout="@layout/fragment_address" >
        <action
            android:id="@+id/action_addressFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@+id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/editScheduleFragment"
        android:name="com.thiagoalexb.dev.clockin.ui.schedule.EditScheduleFragment"
        android:label="fragment_edit_schedule"
        tools:layout="@layout/fragment_edit_schedule" >
        <action
            android:id="@+id/action_editScheduleFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>